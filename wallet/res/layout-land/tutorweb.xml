<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/tutorweb_home">

    <ImageView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/ic_logo_tutorweb"
        android:layout_gravity="center"
        android:layout_weight="0.15"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="0.85"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:id="@+id/tutorweb_home_buttons"
        android:gravity="center">

    <Button
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:text="About Tutor Web"
        android:id="@+id/tutorweb_about"
        style="@style/TutorWebButtons"
        android:onClick="openAbout"
    />

    <Button
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:text="Earning smileycoins"
        android:id="@+id/tutorweb_earn"
        style="@style/TutorWebButtons"
        android:onClick="openEarnSMLY"
        />

    <Button
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:text="Redeem smileycoins"
        android:id="@+id/tutorweb_redeem"
        style="@style/TutorWebButtons"
        android:onClick="openRedeemSMLY"
        />

    <Button
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:id="@+id/tutorweb_use"
        style="@style/TutorWebButtons"
        android:text="Spend smileycoins"
        android:onClick="openSpendSMLY"/>
        </LinearLayout>

</LinearLayout>